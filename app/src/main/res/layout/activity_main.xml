<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="textStart"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:onClick="Enter1"/>

        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:onClick="Enter2"/>

        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:onClick="Enter3"/>

        <Button
            android:id="@+id/btnOps"
            android:layout_row="0"
            android:layout_rowSpan="4"
            android:layout_gravity="fill"
            android:text="OPS"
            android:onClick="ChooseOperation"/>

        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:onClick="Enter4"/>

        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:onClick="Enter5"/>

        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:onClick="Enter6"/>

        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:onClick="Enter7"/>

        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:onClick="Enter8"/>

        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:onClick="Enter9"/>

        <Button
            android:id="@+id/btn0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:text="0"
            android:onClick="Enter0"/>

    </GridLayout>

</LinearLayout>

